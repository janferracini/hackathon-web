<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head') %>
    <link rel="stylesheet" href="/public/stylesheets/vehicles.css" />
  </head>
  <body>
    <header><%- include('./components/header') %></header>

    <main class="container">
      <div class="d-flex justify-content-start">
        <h1 class="display-5 mb-5"><%= vehicle.model %></h1>
      </div>
      <div class="vehicles-container">
        <div class="card position-relative">
          <picture class="position-relative">
            <span class="badge bg-primary picture-label"
              ><%= verifyVehicleType(vehicle.type) %></span
            >
            <span
              class="
                badge
                bg-warning
                position-absolute
                top-0
                start-100
                translate-middle
                rounded-pill
              "
              >+<%= (Math.random() * 100).toFixed(0) %>
              <i class="bi bi-hand-thumbs-up-fill"></i
            ></span>
            <img
              src="<%= replaceStoragePath(vehicle.photo) %>"
              class="card-img-top animate-fade"
              alt="Foto do veÃ­culo"
            />
          </picture>
          <div class="card-body">
            <h3 class="card-title"><%= vehicle.brand %></h3>
            <p class="card-subtitle">
              <%= `${vehicle.brand} ${vehicle.model}` %>
            </p>
            <p class="card-text text-muted">
              <%= `${vehicle.yearmanufacture}/${vehicle.yearmodel}
              ${vehicle.color}` %>
            </p>
            <p class="card-text text-muted">
              <%= vehicle.optionals %>
            </p>
            <p class="card-subtitle text-muted text-decoration-line-through">
              De <%= formatMoney(vehicle.price * 1.10) %>
            </p>
            <h4 class="text-dark"><%= formatMoney(vehicle.price) %></h4>
            <a href="#" class="btn btn-warning"
              >Comprar <i class="bi bi-arrow-right-short"></i
            ></a>
          </div>
        </div>
      </div>
    </main>

    <footer class="bg-light fixed-bottom">
      <%- include('./components/footer') %>
    </footer>
  </body>
</html>
